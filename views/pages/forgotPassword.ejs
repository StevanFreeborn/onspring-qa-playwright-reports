<!DOCTYPE html>
<html lang="en">

<%- include('../partials/_head', { title: locals.title, styles: locals.styles, scripts: locals.scripts }) %>

<body>

  <%- include('../partials/_header') %>

  <main>
    <div>
      <h2>Reset Password</h2>
    </div>
    <div class="form-container">
      <form action="/forgot-password" method="post">
        <section class="form-group">
          <label for="email">Email:</label>
          <input value="<%= locals.formData?.email ?? '' %>" type="email" name="email" id="email" autofocus required>
        </section>
        <section>
          <input name="_csrf" value="<%= csrfToken %>" type="hidden" />
        </section>
        <% if (locals.errors && errors.length) { %>
        <% errors.forEach(error => { %>
        <p class="error"><%= error %></p>
        <% }) %>
        <% } %>
        <% if (locals.success) { %>
        <p class="success">If an account with that email exists, a password reset link has been sent.</p>
        <% } %>
        <button type="submit" class="register-button">Reset Password</button>
      </form>
    </div>
  </main>
</body>

</html>